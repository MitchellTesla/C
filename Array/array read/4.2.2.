#include <iostream>
 
 int main()
 {
     int myArray[5];
     for (int i=0; i<5; i++)  // 0-4
     {
         std::cout << "Value for myArray[" << i << "]: ";
         std::cin >> myArray[i];
     }
     for (int i = 0; i<5; i++)
         std::cout << i << ": " << myArray[i] << "\n";
     return 0;
 }
