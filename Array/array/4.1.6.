#include <iostream>
using std::cout;
using std::endl;

int main()
{
   int b[] = { 10, 20, 30, 40 };
   int *bPtr = b;

   for ( int i = 0; i < 4; i++ )
      cout << *( b + i ) << '\n';

   for ( int j = 0; j < 4; j++ )
      cout << bPtr[ j ] << '\n';

   for ( int i = 0; i < 4; i++ )
      cout << *( bPtr + i ) << '\n';

   return 0;
}
