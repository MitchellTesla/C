#include <iostream> 
using namespace std; 
 
int main() { 
  char choice; 
 
  do { 
    cout << "Help on:\n"; 
    cout << "  1. if\n"; 
    cout << "  2. switch\n"; 
    cout << "  3. for\n"; 
    cout << "  4. while\n"; 
    cout << "  5. do-while\n"; 
    cout << "Choose one: "; 
 
    cin >> choice; 
 
  } while( choice < '1' || choice > '5'); 
 
  cout << "\n\n"; 
  
  switch(choice) { 
    case '1': 
      cout << "The if:\n\n"; 
      break; 
    case '2': 
      cout << "The switch:\n\n"; 
      break; 
    case '3': 
      cout << "The for:\n\n"; 
      break; 
    case '4': 
      cout << "The while:\n\n"; 
      break; 
    case '5': 
      cout << "The do-while:\n\n"; 
      break; 
  } 
  return 0; 
}
